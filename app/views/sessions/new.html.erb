<br/><h1>Log in</h1>

<p style="font-size:10pt">Log in Don't have an account? <%= link_to "Sign up!", signup_path %></p>

<% form_tag sessions_path do %>
  <p>
    <%= label_tag :login, "Username or Email Address", :class => 'entrylabel' %><br/><br/>
    <%= text_field_tag :login, params[:login], :class => 'entryfield' %>
  </p>
  <p>
    <%= label_tag :password, nil, :class => 'entrylabel' %><br/><br/>
    <%= password_field_tag :password, nil, :class => 'entryfield' %>
  </p>
  <p><%= submit_tag "Log in" %></p><br/>
<% end %>
